public class binaryTreeNode {  
    public int data;     
    public binaryTreeNode leftNode; 
    public binaryTreeNode rightNode; 
    public binaryTreeNode(){}  
    public binaryTreeNode(int Key)
    {  
        this.data = Key;  
    }  
}  


